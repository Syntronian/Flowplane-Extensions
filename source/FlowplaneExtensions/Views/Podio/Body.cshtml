<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div id="dlg-ProcObjProperties-error" style="color: #c00;"></div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Create task:
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="txtActivityParamTaskDesc" id="txtActivityParamTaskDesc" placeholder="Description (required)" maxlength="1000" style="width:100%" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">

            Due:
        </label>
        <div class="col-sm-1">
            <input type="text" class="form-control" name="txtActivityParamTaskDueDays" id="txtActivityParamTaskDueDays" placeholder="Days" maxlength="3" style="width:50px;" />
        </div>
        <div class="col-sm-7">
            days
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Assignee:
        </label>
        <div class="col-sm-8">
            <div id="assignees-loading" class="frmLoader" style="width: 440px">
                &nbsp;Loading assignees...
            </div>
            <select id="cboActivityParamAssignee" class="form-control" style="width: 440px"></select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">
            Workspace:
        </label>
        <div class="col-sm-8">
            <div id="workspaces-loading" class="frmLoader" style="width: 440px">
                &nbsp;Loading workspaces...
            </div>
            <select id="cboActivityParamWorkspace" class="form-control" style="width: 440px"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            App:
        </label>
        <div class="col-sm-8">
            <select id="cboActivityParamApp" class="form-control" style="width: 440px"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Item:
        </label>
        <div class="col-sm-8">
            <select id="cboActivityParamItem" class="form-control" style="width: 440px"></select>
        </div>
    </div>
</form>
