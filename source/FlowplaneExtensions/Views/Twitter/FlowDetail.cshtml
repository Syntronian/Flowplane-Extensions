@model FlowplaneExtensions.Models.api.Flow.Detail

<script src='@Url.Content("~/Content/js/moment/moment.js")' type='text/javascript'></script>
<script src='@Url.Content("~/Content/js/forms/apptools.js")' type='text/javascript'></script>
<script>
    $(document).ready(function () {
        fpxt.forms.apptools.fmtDate($('#dtStarted'), 'll');
    });
</script>

<h5><i class="fa fa-twitter fa-2x" style="margin-right: 10px; color: #55acee;"></i>Twitter Event</h5>

<p>
    Tweet status:<br />
</p>
<p>
    @Model.GetParamValue("tweetstatus")
</p>
@if (Model.DateCreated != null)
{
    <p>
        Raised: 
        <span id="dtStarted">@Convert.ToDateTime(Model.DateCreated).ToString("yyyy'-'MM'-'dd'T'HH':'mm':'ss'.'fff'Z'")</span>
    </p>
}
