<html>
<head>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.2.min.js"></script>
    <script>
        window.opener.document.getElementById('txtFacebookAccessToken').value = '@Html.Raw(ViewBag.AccessToken)';

        var btn = $(window.opener.document).find('#btnConnectFacebook');
        var lbl = $(window.opener.document).find('#lblConnectedToFacebook');
        $(btn).hide();
        $(lbl).show();

        window.close();
    </script>
</head>
