<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div id="dlg-ProcObjProperties-error" class="col-sm-8" style="color: #c00;"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Create task:
        </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="txtActivityParamTaskDesc" id="txtActivityParamTaskDesc" placeholder="Task Name (required)" maxlength="1000" style="width:100%" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Folders:
        </label>
        <div class="col-sm-8">
            <div id="folders-loading" class="frmLoader" style="width: 440px">
                &nbsp;Loading folders...
            </div>
            <div id="treeActivityParamFolders" class="jstree jstree-default" role="tree">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Assignee:
        </label>
        <div class="col-sm-8">
            <div id="assignees-loading" class="frmLoader" style="width: 440px">
                &nbsp;Loading assignees...
            </div>
            <select id="cboActivityParamAssignee" class="form-control" style="width: 440px"></select>
        </div>
    </div>
</form>
